#:import ScrollEffect  kivy.effects.scroll.ScrollEffect

<Label>:
    halign: 'center'

<Erro>:
    size_hint: 0.1 * 1.6, 0.05 *0.9
    color: 0,0,0,1
    text: "Error"
    background_color: 1,0,0,1
    background_down: "branco.png"

<Image>:
    allow_stretch: True
    keep_ratio: False




<CircularButtonC>:
    canvas:
        Color:
            rgb: (0.81, 0, 0, 1) if self.state == 'normal' else (0.53, 0.98, 0.09, 1)
        RoundedRectangle:
            size: (self.size)
            pos: (self.pos)
            radius: [400, ]

<CircularButtonE>:
    canvas:
        Color:
            rgb: (0.81, 0, 0, 1) if self.state == 'normal' else (0.45, 0, 0, 1)
        RoundedRectangle:
            size: (self.size)
            pos: (self.pos)
            radius: [400, ]

<Fundo@FloatLayout>:
    FloatLayout:
        canvas:
            Color:
                rgba: 0.15, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
[Barra@FloatLayout]:
    FloatLayout:
        size_hint: 1, 0.1
        canvas:
            Color:
                rgba: 0.45, 0.03, 0.03, 1
            Rectangle:
                pos: self.pos
                size: self.size
    GridLayout:
        cols: 2
        size_hint: 1, 0.1
        Button:
            background_color: (0.45, 0.03, 0.03, ctx.btn1)
            text: "Levels"
            color: (1, 0.95, 0.95, 0.9)
            on_release:
                app.root.current = "m_lvl"
        Button:
            background_color: (0.45, 0.03, 0.03, ctx.btn2)
            text: "Teoria"
            color: (1, 0.95, 0.95, 0.9)
            on_release:
                app.root.current = "m_teo"

<Topo@FloatLayout>:
    FloatLayout:
        size_hint: 1, 0.1
        pos_hint: {"top": 1}
        canvas:
            Color:
                rgba: 0.45, 0.03, 0.03, 1
            Rectangle:
                pos: self.pos
                size: self.size

